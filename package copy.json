{
  "author": "ysj<https://github.com/YangShuangjie>",
  "name": "orchid",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "serve": "vue-cli-service serve --mode development",
    "build": "vue-cli-service build --mode production",
    "lint": "vue-cli-service lint",
    "dev": "concurrently \"npm run serve\" \"wait-on http://localhost:8080 && electron .\"",
    "start": "concurrently \"npm run build && electron .\"",
    "builder": "electron-builder -wl"
  },
  "dependencies": {
    "core-js": "^3.6.4",
    "electron-store": "^5.1.1"
  },
  "devDependencies": {
    "@caohenghu/vue-colorpicker": "^1.2.4",
    "@vue/cli-plugin-babel": "~4.2.0",
    "@vue/cli-plugin-eslint": "~4.2.0",
    "@vue/cli-service": "^4.2.3",
    "babel-eslint": "^10.0.3",
    "babel-plugin-component": "^1.1.1",
    "bootstrap": "^4.4.1",
    "bootstrap-vue": "^2.7.0",
    "concurrently": "^5.1.0",
    "devtron": "^1.4.0",
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.1.2",
    "less": "^3.0.4",
    "less-loader": "^5.0.0",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11",
    "wait-on": "^4.0.1"
  },
  "homepage": "./",
  "build": {
    "productName": "orchid",
    "appId": "orchid",
    "copyright": "Copyright@2020 ${author}",
    "directories": {
      "output": "build"
    },
    "extraResources":  {
      "from": "./node_modules/bootstrap/dist/css/bootstrap.min.css",
      "to": "./app/mainProcess/assets/css/bootstrap.min.css"
    },    
    "asar": false,
    "files": [
      "dist/**/*",
      "./main.js",
      "./mainProcess"
    ],
    "win": {
      "icon": "./src/assets/orchid256x256.ico",
      "target": [
        "msi",
        "nsis",
        "portable"
      ],
      "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}"
    },

    "publish": [
      "github"
    ]
  }
}
